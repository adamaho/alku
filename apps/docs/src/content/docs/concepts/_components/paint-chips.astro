            }

            &[data-swatch="a12"] {
              --swatch-background: var(--ak-accent-color-a12);
            }

            .paint-chip-swatch-color {
              background-color: var(--swatch-background);
              border: var(--ak-border-width-1) solid var(--swatch-border);
              border-radius: var(--ak-border-radius-3);
              height: 100%;
