---
import { ThemePickerPopover } from "./components/theme-picker/theme-picker-popover";
import { Navigation } from "./components/navigation/navigation";
---

<nav
  class="wui-docs-sidebar fixed flex h-full w-[calc(var(--wui-docs-layout-sidebar-width)-calc(16px*var(--wui-scale)))] flex-col bg-[var(--wui-docs-layout-background)] pb-6"
>
  <div class="flex pt-6 pb-6 pl-6">
    <div class="flex flex-1 items-center gap-4">
      <span class="text-3 text-grey-12 tracking-9 font-medium">Winnie</span>
      <span class="bg-grey-8 h-5 w-[1px]"></span>
      <span class="text-3 text-grey-11">Docs</span>
    </div>
    <ThemePickerPopover client:load />
  </div>
  <Navigation client:load />
</nav>
