---
type Props = {
  class?: string;
};

const props = Astro.props;
---

<button class={`${props.class} goho-button`}><slot /></button>

<style>
  .goho-button {
    background: linear-gradient(
      to bottom,
      var(--go-color-accent-9),
      var(--go-color-accent-10)
    );
    border: var(--go-border-width-1) solid var(--go-color-accent-9);
    border-radius: var(--go-border-radius-3);
    box-shadow:
      inset 0 -1px 1px 0px var(--go-color-black-a6),
      inset 0 1px 1px 0px var(--go-color-white-a9);
    color: var(--go-color-accent-contrast);
    font-size: var(--go-font-size-2);
    font-weight: var(--go-font-weight-medium);
    height: 32px;
    padding-inline: var(--go-space-3);
    text-shadow: 0 0.5px var(--go-color-black-a9);
    white-space: nowrap;

    &:hover {
      background: var(--go-color-accent-10);
    }

    &:focus-visible {
      background: var(--go-color-accent-10);
      border-color: var(--go-color-accent-10);
      outline: var(--go-border-width-2) solid var(--go-color-accent-10);
      outline-offset: var(--go-space-1);
    }

    &:active {
      background: var(--go-color-accent-10);
      border-color: var(--go-color-accent-10);
      box-shadow:
        inset 0 -1px 1px 0px var(--go-color-white-a7),
        inset 0 1px 1px 0px var(--go-color-black-a6);
      padding-top: 1px;
      text-shadow: none;
    }
  }
</style>
